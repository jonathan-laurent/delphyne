{
    "[python]": {
        // "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.formatOnType": true,
        "editor.rulers": [80],
        "rewrap.wrappingColumn": 72,
        "rewrap.autoWrap.enabled": true
    },
    "python.testing.pytestArgs": ["tests", "-s"],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    // "isort.args": [
    //     "--settings-path=${workspaceFolder}/pyproject.toml"
    // ],
    "python.analysis.packageIndexDepths": [
        {
            "name": "delphyne",
            "depth": 2,
            "includeAllSymbols": true
        },
        {
            "name": "fastapi",
            "depth": 2
        }
    ],
    "python.analysis.autoImportCompletions": true,
    "python.analysis.indexing": true,
    "python.analysis.showOnlyDirectDependenciesInAutoImport": true,
    "python.analysis.logLevel": "Trace",
    "python-envs.defaultEnvManager": "ms-python.python:conda",
    "python-envs.defaultPackageManager": "ms-python.python:conda",
    "python-envs.pythonProjects": [],
    // We also wrap template files for readability.
    "[jinja-md]": {
        "editor.wrappingIndent": "indent",
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 80,
        "editor.indentSize": 2,
        "editor.rulers": [80],
    },
    // Indicate that the Jinja templates are written in Markdown
    "files.associations": {
        "*.jinja": "jinja-md"
    },
}